@{
    ViewBag.Title = "My Journal";
}

<h1>
    <div class="wrapper">
        Your Journal
        <div class="arrow"></div>
    </div>
</h1>

<div class="contentbody">
    <div class="wrapper lightsidecol">
        <div id="maincol">
            <p class="lead">
                Welcome to your Journal. This is a place where you can document and diarise your life's memories.
            </p>
            <p>
                If you do not yet have a login, please click on the 'contact us' button above to open dialog.
            </p>

        </div>
        <div id="sidecol">
            <div class="row">
                <div class="col-md-4">
                    <h2>Request a project</h2>
                    <p>IIID is always looking for exciting ways to progress science. This requires a login. If you don't yet have a login, please request a login from our 'Contact us' page above.</p>
                    @*<p>@Html.ActionLink("Create", "Create", "Projects")</p>*@
                </div>
                <div class="col-md-4">
                    <h2>Projects</h2>
                    <p>
                        Review the details of your projects. Requires login.
                    </p>
                    @*<p>@Html.ActionLink("My Projects", "Index", "Projects")</p>
                    <p>@Html.ActionLink("Projects Pending Approval", "Pending", "Projects")</p>*@
                </div>
                <div class="col-md-4">
                    <h2>Send us Samples</h2>
                    <p>Register and post us samples for use in an approved project. Requires login.</p>
                    @*<p>@Html.ActionLink("Import Samples", "Import", "Reagents")</p>*@
                    @*<p>@Html.ActionLink("Our Lab Workflows", "Index", "Network")</p>*@
                </div>
            </div>
        </div>
    </div>
</div>